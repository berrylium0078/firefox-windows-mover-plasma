{
    "manifest_version": 3,
    "name": "Windows Mover Plasma",
    "version": "1.1",
    "icons": {
        "48": "icons/preferences-system-windows-move.svg"
    },
    
    "description": "Move new windows to current desktop (only for KDE users!)",

    "background": {
        "scripts": ["background.js"]
    },
    "permissions": ["nativeMessaging", "sessions"],
    "browser_specific_settings": {
        "gecko": {
            "id": "windowsmoverplasma@berrylium"
        }
    }
}
